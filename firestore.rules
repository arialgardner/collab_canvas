rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to canvas rectangles for authenticated users
    match /canvases/{canvasId}/rectangles/{rectangleId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write access to user documents for the user themselves
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to presence for authenticated users
    // Allow write access only for the user's own presence
    match /presence/{canvasId}/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read/write access to cursors for authenticated users
    // Users can only write their own cursor data
    match /cursors/{canvasId}/positions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}