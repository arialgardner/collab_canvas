rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Simple auth-only rules for testing
    // TODO: Replace with permission-based rules after canvas metadata is set up
    
    // Canvas documents
    match /canvases/{canvasId} {
      allow read, write: if request.auth != null;
      
      // Shapes within canvas
      match /shapes/{shapeId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // User documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Presence
    match /presence/{canvasId}/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Cursors
    match /cursors/{canvasId}/positions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
